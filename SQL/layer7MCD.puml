    firstName: varchar[254]
    email: varchar[254]
    password: varchar[254]
    dateInscription: datetime
    statut: ENUM
}

entity Administrateur {
    id: int
    niveau: ENUM
}

entity Client {
    id: int
    customerNumber: int
}

entity HistoRequest {
    id: int
    nameRequest: varchar[254]
